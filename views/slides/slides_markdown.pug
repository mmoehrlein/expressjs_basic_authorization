- var theme_link = "/assets/lib/reveal/css/theme/" + theme + ".css"

html
    head
        link(rel='stylesheet', href='/assets/lib/reveal/css/reveal.css')
        link(rel='stylesheet', href=theme_link)
    body
        .reveal
            .slides
                for slide in slides
                    section
                        p #{slide}

        script(src='/assets/lib/reveal/lib/js/head.min.js')
        script(src='/assets/lib/reveal/js/reveal.js')
        script.
            Reveal.initialize({
                controls: true,
                progress: true,
                history: true,
                center: true,
                // Optional libraries used to extend on reveal.js
                dependencies: [
                    {
                        src: '/assets/lib/reveal/lib/js/classList.js',
                        condition: function(){
                            return !document.body.classList;
                        }
                    },
                    {
                        src: '/assets/lib/reveal/plugin/markdown/marked.js',
                        condition: function(){
                            return !!document.querySelector('[data-markdown]');
                        }
                    },
                    {
                        src: '/assets/lib/reveal/plugin/markdown/markdown.js',
                        condition: function(){
                            return !!document.querySelector('[data-markdown]');
                        }
                    },
                    {
                        src: '/assets/lib/reveal/plugin/highlight/highlight.js',
                        async: true,
                        callback: function(){
                            hljs.initHighlightingOnLoad();
                        }
                    },
                    {src: '/assets/lib/reveal/plugin/notes/notes.js'}
                ]
            });
